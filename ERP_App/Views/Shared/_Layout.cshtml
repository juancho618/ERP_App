                                </li>
                                <li role="separator" class="divider"></li>
                                
                                <li>
                                    <a href="#">Separated link</a>
                                </li>
                            </ul>
                        </li>
                    </ul>
                </div>

                <div class="clearfix"></div>
            </header>

            <div id="page-content-wrapper">
                <div class="container-fluid">
                    <div class="row">
                        <div class="col-md-12 col-lg-12">
                           @RenderBody()
                        </div>
                    </div>
                </div>
            </div>
        </div>


