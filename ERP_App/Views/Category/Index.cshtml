@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Category List</h2>

<div ng-controller="categoryController">
    <div ng-show="loaded == false" class="spinner">
        <div class="rect1"></div>
        <div class="rect2"></div>
        <div class="rect3"></div>
        <div class="rect4"></div>
        <div class="rect5"></div>
    </div>

    <table ng-show="loaded == true" class="table table-responsive table-striped">
        <thead>
            <tr>
                <th>Category</th>
            </tr>
        </thead>

        <tbody>
            <tr ng-repeat="item in categoryList">
                <td>{{item.Category}}</td>
            </tr>
        </tbody>
    </table>
</div>